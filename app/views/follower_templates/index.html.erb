<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All followers
    </h1>

    <a href="/followers/new" class="btn btn-block btn-outline-secondary">
      Add a new follower
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sender
        </th>

        <th>
          Recipient
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @followers.each do |follower| %>
      <tr>
        <!-- Display follower.id start -->
        <td>
          <%= follower.id %>
        </td>
        <!-- Display follower.id end -->

        <!-- Display follower.sender_id start -->
        <td>
          <%= follower.sender_id %>
        </td>
        <!-- Display follower.sender_id end -->

        <!-- Display follower.recipient_id start -->
        <td>
          <%= follower.recipient_id %>
        </td>
        <!-- Display follower.recipient_id end -->

        <!-- Display follower.status start -->
        <td>
          <%= follower.status %>
        </td>
        <!-- Display follower.status end -->

        <!-- Display follower.created_at start -->
        <td>
          <%= time_ago_in_words(follower.created_at) %> ago
        </td>
        <!-- Display follower.created_at end -->

        <!-- Display follower.updated_at start -->
        <td>
          <%= time_ago_in_words(follower.updated_at) %> ago
        </td>
        <!-- Display follower.updated_at end -->

        <td>
          <a href="/followers/<%= follower.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @followers, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
