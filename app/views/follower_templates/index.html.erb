<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All followers
    </h1>

    <a href="/followers/new" class="btn btn-block btn-outline-secondary">
      Add a new follower
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "follower_templates/followers_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sender
        </th>

        <th>
          Recipient
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @followers.each do |follower| %>
      <tr>
        <td>
          <%= follower.id %>
        </td>

        <td>
          <%= follower.sender_id %>
        </td>

        <td>
          <%= follower.recipient_id %>
        </td>

        <td>
          <%= follower.status %>
        </td>

        <td>
          <%= time_ago_in_words(follower.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(follower.updated_at) %> ago
        </td>

        <td>
          <a href="/followers/<%= follower.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @followers, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
