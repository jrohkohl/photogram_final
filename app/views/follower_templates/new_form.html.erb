<h1>
  Add a new follower
</h1>


<hr>

<form action="/create_follower" method="post">

  <div class="form-group">
    <label for="sender_id">
      Sender
    </label>

    <input type="text" id="sender_id" name="sender_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="recipient_id">
      Recipient
    </label>

    <input type="text" id="recipient_id" name="recipient_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="status">
      Status
    </label>

    <input type="text" id="status" name="status" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create follower
  </button>
</form>

<hr>

<a href="/followers">
  Go back
</a>
