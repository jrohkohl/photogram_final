<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Fan #<%= @fan.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/fans" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/fans/<%= @fan.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit fan
        </a>
      </div>

      <div class="col">
        <a href="/delete_fan/<%= @fan.id %>" class="btn btn-block btn-outline-secondary">
          Delete fan
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Fan
      </dt>
      <dd>
        <%= @fan.fan_id %>
      </dd>

      <dt>
        Photo
      </dt>
      <dd>
        <%= @fan.photo_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@fan.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@fan.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

