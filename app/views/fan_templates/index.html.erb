<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All fans
    </h1>

    <a href="/fans/new" class="btn btn-block btn-outline-secondary">
      Add a new fan
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "fan_templates/fans_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Fan
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @fans.each do |fan| %>
      <tr>
        <td>
          <%= fan.id %>
        </td>

        <td>
          <%= fan.fan_id %>
        </td>

        <td>
          <%= fan.photo_id %>
        </td>

        <td>
          <%= time_ago_in_words(fan.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(fan.updated_at) %> ago
        </td>

        <td>
          <a href="/fans/<%= fan.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @fans, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
