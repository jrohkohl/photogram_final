<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Fan
        </th>

        <th>
          Photo
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @fans.each do |fan| %>
      <tr>
        <!-- Display fan.id start -->
        <td>
          <%= fan.id %>
        </td>
        <!-- Display fan.id end -->

        <!-- Display fan.fan_id start -->
        <td>
          <%= fan.fan_id %>
        </td>
        <!-- Display fan.fan_id end -->

        <!-- Display fan.photo_id start -->
        <td>
          <%= fan.photo_id %>
        </td>
        <!-- Display fan.photo_id end -->

        <!-- Display fan.created_at start -->
        <td>
          <%= time_ago_in_words(fan.created_at) %> ago
        </td>
        <!-- Display fan.created_at end -->

        <!-- Display fan.updated_at start -->
        <td>
          <%= time_ago_in_words(fan.updated_at) %> ago
        </td>
        <!-- Display fan.updated_at end -->

        <td>
          <a href="/fans/<%= fan.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
