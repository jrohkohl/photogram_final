<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All fans
    </h1>

    <a href="/fans/new" class="btn btn-block btn-outline-secondary">
      Add a new fan
    </a>
  </div>
</div>

<!-- Ransack Code start -->

