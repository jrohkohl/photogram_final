<% if @fan.errors.any? %>
  <% @fan.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit fan #<%= @fan.id %>
</h1>

<hr>

<form action="/update_fan/<%= @fan.id %>" method="post">

  <div class="form-group">
    <label for="fan_id">
      Fan
    </label>

    <input type="text" id="fan_id" name="fan_id" class="form-control" value="<%= @fan.fan_id %>">
  </div>

  <div class="form-group">
    <label for="photo_id">
      Photo
    </label>

    <input type="text" id="photo_id" name="photo_id" class="form-control" value="<%= @fan.photo_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update fan
  </button>
</form>

<hr>

<a href="/fans">
  Go back
</a>
